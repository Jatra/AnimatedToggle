<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/sliders_down"
        android:drawable="@drawable/sliders_down"
        android:state_selected="false" />
    <item
        android:id="@+id/sliders_up"
        android:drawable="@drawable/sliders_up"
        android:state_selected="true" />

    <transition
        android:drawable="@drawable/avd_sliders_down_to_up"
        android:fromId="@id/sliders_down"
        android:toId="@id/sliders_up" />

    <transition
        android:drawable="@drawable/avd_sliders_up_to_down"
        android:fromId="@id/sliders_up"
        android:toId="@id/sliders_down" />
</animated-selector>